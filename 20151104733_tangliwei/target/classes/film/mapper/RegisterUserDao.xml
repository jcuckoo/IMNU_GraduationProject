<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="film.mapper.RegisterUserDao">

		<insert id="RegisterByBean"
		parameterType="User">
		
		insert into userinfo(username,userpass,usernumber)
		values(#{username},#{userpass},#{usernumber})
		</insert>
		
		<insert id="updateByBean"
		parameterType="User">
		update userinfo set username=#{username},userpass=#{userpass},usernumber=#{usernumber}
		where id=#{id}
		</insert>
</mapper>